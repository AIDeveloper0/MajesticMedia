<script>
/* Tab toggle behavior (keeps UI accessible) */
(function(){
  document.addEventListener('click', function(e){
    const t = e.target.closest('.sp-tab');
    if(!t) return;
    const tabs = Array.from(document.querySelectorAll('.sp-tab'));
    tabs.forEach(x => x.classList.remove('active'));
    t.classList.add('active');

    // accessibility: update aria-selected for buttons
    tabs.forEach(b => b.setAttribute('aria-selected', 'false'));
    t.setAttribute('aria-selected', 'true');

    // show/hide panels — data-target on each button points to the panel id
    const target = t.getAttribute('data-target');
    const panels = Array.from(document.querySelectorAll('.tab-panel'));
    panels.forEach(p => {
      if(p.id === target){
        p.style.display = '';
        p.setAttribute('aria-hidden', 'false');
      } else {
        p.style.display = 'none';
        p.setAttribute('aria-hidden', 'true');
      }
    });

    // ensure scroll resets to top for the new panel
    const inner = document.querySelector('.sp-inner');
    if(inner) inner.scrollTop = 0;
  });
})();
</script>